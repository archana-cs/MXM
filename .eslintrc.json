{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prefer-stateless-function": "off",
    "import/no-extraneous-dependencies": "off",
    "react/no-unused-prop-types": 0,
    "react/jsx-props-no-spreading": "off",
    "jsx-a11y/no-static-element-interactions": "off", //this allows handlers on elements other than button/link
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/alt-text": "off"
  },
  "ignorePatterns": [
    ".storybook/",
    "/node_modules/",
    "/build/"
  ]
}
